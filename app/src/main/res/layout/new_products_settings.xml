<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.jm.buywithme.Settings">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        >
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar2"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/zownp" />

            <TextView
                android:id="@+id/nameText"
                android:layout_width="57dp"
                android:layout_height="wrap_content"

                android:layout_alignTop="@+id/image"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/asap"
                android:text=""
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="75dp" />

            <TextView
                android:id="@+id/nameProduct"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="45dp"
                android:fontFamily="@font/asap"
                android:text="Name of the Product"
                android:textColor="@android:color/background_dark"
                android:textSize="19dp" />

            <EditText
                android:id="@+id/inputNameProduct"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/nameProduct"
                android:layout_marginStart="18dp"

                android:ems="10"
                android:hint=""
                android:inputType="textPersonName"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/quantity"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_below="@+id/inputNameProduct"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/asap"
                android:text="Quantity"
                android:textColor="@android:color/background_dark"
                android:textSize="19dp" />


            <EditText
                android:id="@+id/inputQuantity"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/quantity"
                android:layout_marginStart="18dp"

                android:ems="10"
                android:hint=""
                android:inputType="textPersonName"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/description"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/inputQuantity"
                android:layout_below="@+id/inputQuantity"
                android:layout_marginTop="29dp"
                android:fontFamily="@font/asap"
                android:text="Description"
                android:textColor="@android:color/background_dark"
                android:textSize="19dp" />

            <EditText
                android:id="@+id/inputDescription"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/description"
                android:layout_marginStart="15dp"
                android:ems="10"
                android:hint=""
                android:inputType="textPersonName" />


            <TextView
                android:id="@+id/addedBy"
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/inputDescription"
                android:layout_below="@+id/inputDescription"
                android:layout_marginTop="29dp"
                android:fontFamily="@font/asap"
                android:text="Added to list by"
                android:textColor="@android:color/background_dark"
                android:textSize="19dp" />

            <EditText
                android:id="@+id/inputAddedBy"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/addedBy"
                android:layout_marginStart="15dp"
                android:ems="10"
                android:hint=""
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="100dp"
                android:layout_height="33dp"
                android:layout_alignBaseline="@+id/acceptButton"
                android:layout_alignBottom="@+id/acceptButton"
                android:layout_toEndOf="@+id/inputAddedBy"
                android:background="@drawable/buttonround"
                android:text="Cancel" />

            <Button
                android:id="@+id/acceptButton"
                android:layout_width="100dp"
                android:layout_height="33dp"
                android:layout_alignEnd="@+id/addedBy"
                android:layout_below="@+id/inputAddedBy"
                android:layout_marginTop="23dp"
                android:background="@drawable/buttonround"
                android:text="Save" />


            <Button
                android:id="@+id/deleteButton"
                android:layout_width="100dp"
                android:layout_height="33dp"
                android:layout_alignEnd="@+id/cancelButton"
                android:layout_alignStart="@+id/acceptButton"
                android:layout_below="@+id/acceptButton"
                android:layout_marginTop="23dp"
                android:layout_marginBottom="20dp"
                android:background="@android:color/holo_red_dark"
                android:text="Delete Product" />

        </RelativeLayout>
    </ScrollView>



</RelativeLayout>